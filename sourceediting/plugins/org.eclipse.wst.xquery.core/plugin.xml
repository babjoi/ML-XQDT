<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension point="org.eclipse.team.core.fileTypes">
      <fileTypes
            extension="xql"
            type="text">
      </fileTypes>
      <fileTypes
            extension="xquery"
            type="text">
      </fileTypes>
   </extension>
   
   <extension point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            default-charset="UTF-8"
            file-extensions="xql,xquery"
            id="org.eclipse.wst.xquery.core.xqlsource"
            name="%XQL.ContentType.Name"
            priority="normal">
      </content-type>
   </extension>
   
   
   <extension
         point="org.eclipse.wst.sse.core.modelHandler">
      <modelHandler
            associatedContentTypeId="org.eclipse.wst.xquery.core.xqlsource"
            class="org.eclipse.wst.xquery.core.internal.modelhandler.ModelHandlerForXQuery"
            default="true"
            id="org.eclipse.wst.xquery.core.handler">
      </modelHandler>
   </extension>
      
   <extension
         id="org.eclipse.wst.xml.core.documentfactories"
         name="%Structured_XML_Document_Factory_Extension.name"
         point="org.eclipse.core.filebuffers.documentCreation">
      <factory
            class="org.eclipse.wst.sse.core.internal.filebuffers.BasicStructuredDocumentFactory"
            contentTypeId="org.eclipse.wst.xquery.core.xqlsource">
      </factory>
   </extension>
</plugin>
